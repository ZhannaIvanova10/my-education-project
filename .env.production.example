# ============================================
# ПРОДАКШЕН НАСТРОЙКИ ДЛЯ ДЕПЛОЯ
# ============================================

# Django Settings
# ===============
DEBUG=False
SECRET_KEY=ваш-секретный-ключ-из-50-символов
ALLOWED_HOSTS=localhost,127.0.0.1,ваш-ip-адрес,ваш-домен.com

# Database (PostgreSQL)
# =====================
POSTGRES_DB=education_db
POSTGRES_USER=education_user
POSTGRES_PASSWORD=сложный-пароль-для-базы
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis
# =====
REDIS_HOST=redis
REDIS_PORT=6379

# Celery
# ======
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=Europe/Moscow

# Docker
# ======
DOCKER_COMPOSE_PROJECT_NAME=myeducation

# Security
# ========
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://ваш-ip-адрес:8000

# Logging
# =======
LOG_LEVEL=INFO

# Примечание:
# 1. ЗАМЕНИТЕ все значения на реальные!
# 2. SECRET_KEY должен быть длинным и случайным
# 3. POSTGRES_PASSWORD должен быть сложным
# 4. ALLOWED_HOSTS должен включать ваш IP/домен

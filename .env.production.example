# ============================================
# ПРОДАКШЕН НАСТРОЙКИ
# ============================================

# ============================================
# Django Settings
# ============================================
DEBUG=False
# Сгенерируйте новый ключ: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here-must-be-at-least-50-characters-long
ALLOWED_HOSTS=localhost,127.0.0.1,your-server-ip,your-domain.com

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_DB=education_db
POSTGRES_USER=education_user
# Используйте сложный пароль!
POSTGRES_PASSWORD=your-strong-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================
# Celery
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TIMEZONE=Europe/Moscow

# ============================================
# Docker
# ============================================
DOCKER_COMPOSE_PROJECT_NAME=myeducation

# ============================================
# Security (для продакшена)
# ============================================
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,http://your-server-ip,https://your-domain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO

# ============================================
# Email Settings (если нужны)
# ============================================
EMAIL_HOST=smtp.yandex.ru
EMAIL_PORT=465
EMAIL_USE_SSL=True
EMAIL_HOST_USER=your-email@yandex.ru
EMAIL_HOST_PASSWORD=your-email-password

# ============================================
# ВНИМАНИЕ:
# 1. Замените ВСЕ значения на реальные!
# 2. Никогда не коммитьте этот файл с реальными данными!
# 3. Используйте GitHub Secrets для хранения значений!
# ============================================